@page "{id:int?}"
@model PainelRotinaEstudos.Pages.Activities.DetailsModel
@{
    ViewData["Title"] = "Detalhes da Atividade";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="bi bi-info-circle"></i> Detalhes da Atividade
                </h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3 fw-bold">
                        <i class="bi bi-book text-primary"></i> Matéria:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Activity.Subject)
                    </dd>

                    <dt class="col-sm-3 fw-bold">
                        <i class="bi bi-calendar-day text-success"></i> Dia:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Activity.Day)
                        (@Model.GetDayFullName(Model.Activity.Day))
                    </dd>

                    <dt class="col-sm-3 fw-bold">
                        <i class="bi bi-clock text-warning"></i> Horário:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Activity.Time)
                    </dd>

                    <dt class="col-sm-3 fw-bold">
                        <i class="bi bi-file-text text-info"></i> Descrição:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Activity.Description)
                    </dd>

                    <dt class="col-sm-3 fw-bold">
                        <i class="bi bi-calendar-check text-secondary"></i> Data de Criação:
                    </dt>
                    <dd class="col-sm-9">
                        @Model.Activity.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                    </dd>

                    <dt class="col-sm-3 fw-bold">
                        <i class="bi bi-hash text-muted"></i> ID:
                    </dt>
                    <dd class="col-sm-9 text-muted">
                        <small>@Html.DisplayFor(model => model.Activity.Id)</small>
                    </dd>
                </dl>
                <hr>
                <div class="d-flex gap-2">
                    <a asp-page="./Edit" asp-route-id="@Model.Activity.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-page="./Delete" asp-route-id="@Model.Activity.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Excluir
                    </a>
                    <a asp-page="./Index" class="btn btn-secondary ms-auto">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>